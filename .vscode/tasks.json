{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc test",
            "command": "gcc",
            "args": [
                "-m32",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": ":task generated by debugger"
        },
        {
            "type": "shell",
            "label": "gdb test.s",
            "command": "/usr/bin/gcc",
            "args": [
                "-m32",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: /usr/bin/gcc"
        }
    ],
    "version": "2.0.0"
}